.control-group
  = c.label :name, 'Название', {class: 'control-label'}
  .controls= c.text_field :name, placeholder: 'Название поста'
.control-group
  = c.label :alias, 'Алиас', {class: 'control-label'}
  .controls= c.text_field :alias, placeholder: 'Алиас поста'
.control-group
  = f.label :category_id, 'Категория', {class: 'control-label'}
  .controls= f.select :category_id, options_for_select(Category.all.map{|c| [c.content.name, c.id]}, @post.category_id)
.control-group
  = c.label :published, 'Публикация', {class: 'control-label'}
  .controls= c.check_box :published
.control-group
  = f.label :main, 'Главная страница', {class: 'control-label'}
  .controls= f.check_box :main
