.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Админка', admin_root_path, class: 'brand'
      = link_to 'Сайт', root_path, class: 'brand'
      .container.nav-collapse
        %ul.nav
          %li= link_to 'Категории', admin_categories_path
          %li= link_to 'Посты', admin_posts_path
          %li= link_to 'Меню', admin_menus_path if can? :read, current_user

        %ul.nav.pull-right
          %li
            .nav-collapse
              %ul.nav
                %li.dropdown.user-avatar
                  .btn-group
                    = link_to '#', {class: 'btn btn-info dropdown-toggle', data: {toggle: 'dropdown'}} do
                      = content_tag(:span, raw(glyph(:user) + current_user.email))
                    %ul.dropdown-menu
                      %li= link_to 'Редактировать', [:edit, :admin, current_user]
                      %li= link_to 'Выйти', destroy_user_session_path, method: :delete
