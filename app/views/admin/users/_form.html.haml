= form_for [:admin, @user], html: {class: 'form-horizontal'} do |f|
  = render 'errors'
  .btn-toolbar
    .btn-group
      = f.submit 'Сохранить', class: 'btn btn-primary'
      = f.button 'Отмена', class: 'btn', type: 'reset'
  .tabbable
    %ul.nav.nav-tabs.clickTabs{data: {tabs: 'tabs'}}
      = render 'admin/users/tabs/menu'
  .tab-content
    .tab-pane.active#main_info
      = render 'admin/users/tabs/main_info', f: f
    .tab-pane#additional_info
      = render 'admin/users/tabs/additional_info'